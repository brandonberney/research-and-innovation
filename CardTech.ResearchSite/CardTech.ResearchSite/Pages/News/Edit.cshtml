@page
@model CardTech.ResearchSite.Pages.News.EditModel

@{
    ViewData["Title"] = "Edit Article";
}

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ID" />
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Published" class="control-label"></label>
                <input asp-for="Article.Published" class="form-control" />
                <span asp-validation-for="Article.Published" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.LastUpdated" class="control-label"></label>
                <input asp-for="Article.LastUpdated" class="form-control" />
                <span asp-validation-for="Article.LastUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Description" class="control-label"></label>
                <input asp-for="Article.Description" class="form-control" />
                <span asp-validation-for="Article.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.FeaturedImage" class="control-label"></label>
                <input asp-for="Article.FeaturedImage" class="form-control" />
                <span asp-validation-for="Article.FeaturedImage" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.Featured" /> @Html.DisplayNameFor(model => model.Article.Featured)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}